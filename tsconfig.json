{
    "compilerOptions": {
      "target": "esnext",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "declaration": false,
      "sourceMap": true,
      "resolveJsonModule": true
    },
    "include": [
      "*.ts"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  